<%= @posts.pager.to_html(request.url) %>
<% @posts.each do |post| %>	
<div class="article section">
<div class="header">
<h2 class="title"><a href="<%= post.link %>"><%= post.title %></a></h2>
<p class="pubdate"><span class="mounth"><%=  post.created_at.month %>月</span><span class="day"><%=post.created_at.day %>日</span><span class="year"><%= post.created_at.year %></span></p>
</div>
<div class="body">
<dl class="author">
<dt>この記事を書いた人</dt>
<dd><%= post.user.name %> <img src="<%= gravatar_image_url(post.user.email) %>"/></dd>
</dl>
<div class="content">
<%= post.body %>
<% unless post.tags.size.zero? %>
<%= post.tags_to_html %>
<% end %>
</div>
</div>
	
	
<div class="footer">
<%= comments_link(post.id, post.link) %>

<% if logged_in? %>
<p><a href="<%= post.edit_link %>"><%= t.edit %></a></p>
<% end %>    
</div>
</div>	
<% end %>
<%= @posts.pager.to_html(request.url) %>
